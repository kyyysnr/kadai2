<h1>Editing Book</h1>
<div class="error_explanation">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <label class="books" for="book_title">Title</label>
    <%= f.text_field:title %>
  </div>
  <div class="field">
    <label class="books" for="book_body">Body</label>
    <%= f.text_area:body %>
  </div>
  <div class="action">
    <%= f.submit' Update Book ' %>
  </div>
<% end %>


<p><%= link_to "Show",book_path %> | <%= link_to "Back","/books" %></p>