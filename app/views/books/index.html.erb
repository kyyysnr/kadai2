<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show",book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Edit",edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Destroy",book_path(book.id), method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
<h2>New Book</h2>



<%= form_with model:Book.new do |f| %>
<div class="error_explanation">
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>

  <div class="field">
    <label class="books" for="book_title">Title</label>
    <%= f.text_field:title %>
  </div>
  <div class="field">
    <label class="books" for="book_body">Body</label>
    <%= f.text_area:body %>
  </div>
  <div class="action">
    <%= f.submit' Create Book ' %>
  </div>
<% end %>




